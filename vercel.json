{
    "buildCommand": "cd client && npm install --include=dev && npm run build",
    "outputDirectory": "client/build",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "server/**"
        }
    }
}